<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nonprofitheroes.volunteerhero"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nonprofitheroes.volunteerhero.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nonprofitheroes.volunteerhero.MyCharitiesActivity"
            android:label="@string/title_activity_my_charities"
            android:parentActivityName="com.nonprofitheroes.volunteerhero.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nonprofitheroes.volunteerhero.MainActivity" />
        </activity>
        <activity
            android:name="com.nonprofitheroes.volunteerhero.MyCalendarActivity"
            android:label="@string/title_activity_my_calendar"
            android:parentActivityName="com.nonprofitheroes.volunteerhero.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nonprofitheroes.volunteerhero.MainActivity" />
        </activity>
        <activity
            android:name="com.nonprofitheroes.volunteerhero.FindLocalEventsActivity"
            android:label="@string/title_activity_find_local_events"
            android:parentActivityName="com.nonprofitheroes.volunteerhero.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nonprofitheroes.volunteerhero.MainActivity" />
        </activity>
        <activity
            android:name="com.nonprofitheroes.volunteerhero.MyProfileActivity"
            android:label="@string/title_activity_my_profile"
            android:parentActivityName="com.nonprofitheroes.volunteerhero.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nonprofitheroes.volunteerhero.MainActivity" />
        </activity>
        <activity
            android:name="com.nonprofitheroes.volunteerhero.FirstLaunchActivity"
            android:label="@string/title_activity_first_launch" >
        </activity>
    </application>

</manifest>
